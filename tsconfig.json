{
    "compilerOptions": {
        /* Output & declarations */
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": false,

        /* Target & libs */
        "target": "ES2019",
        "lib": ["ES2019", "DOM"],

        /* Module system */
        "module": "ESNext",
        "moduleResolution": "bundler",

        /* JSX */
        "jsx": "react-jsx",

        /* Interop & type checking */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules", "**/*.test.*", "**/*.spec.*", "**/__tests__/**", "example/**"]
}
